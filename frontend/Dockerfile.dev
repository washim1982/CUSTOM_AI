# --- Development Dockerfile for React ---
FROM node:18-alpine

WORKDIR /app

# Copy package manifests
COPY package*.json ./

# Ensure dependencies + Auth0 SDK
RUN npm install --legacy-peer-deps && \
    npm install @auth0/auth0-react --save && \
    echo "âœ… Installed dependencies and Auth0 SDK"

# Copy source code
COPY . .

# Expose the React dev server port
EXPOSE 3000

# Run development server
CMD ["npm", "start"]
